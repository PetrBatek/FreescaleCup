# nastav email
git config --global user.email "<github email>"

# nastav jmeno
git config --global user.name "<jmeno>"

# naklonuj si repo
git clone https://github.com/PetrBatek/FreescaleCup.git

--------------------------------------------------------------------------
# stahni si zmeny ze serveru (udelej vzdy nez zacnes programovat)
git pull

# ukaz stav
git status

# pridej soubor do commitu
git add <filepath>

# odstran soubor z commitu
git reset HEAD <file>

# odstran soubor
git rm <filepath>

# vytvor commit z pripravenych souboru (git add)
git commit
git commit -a                   # automaticky pridej vsechny zmenene soubory (git add)
git commit -m 'popis commitu'    # popis z prikazove radky

# posly vsechny zmeny (commity) na server (github)
git push origin master

-------------------------------------------------------------------------
# vypis commity
git log

# zrus posledni vytvoreny commit (neupravuje soubory)
git reset --soft HEAD~1

# vrat zmeny v souborech do stavu v poslednim commitu
git reset --hard
